<?xml version="1.0" ?>
<sdf version="1.6">
  <model name="simple_room">
    <static>true</static>
    <!-- Sol -->
    <link name="floor">
      <collision name="floor_collision">
        <geometry>
          <box>
            <size>5 5 0.1</size>
          </box>
        </geometry>
      </collision>
      <visual name="floor_visual">
        <geometry>
          <box>
            <size>5 5 0.1</size>
          </box>
        </geometry>
        <material>
          <ambient>0.7 0.7 0.7 1</ambient>
        </material>
      </visual>
    </link>

    <!-- Mur avant -->
