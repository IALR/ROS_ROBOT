<?xml version="1.0"?>
<robot name="robotic_chair">

  <!-- ============================================= -->
  <!-- MATERIALS -->
  <!-- ============================================= -->
  <material name="mat_dark_grey"><color rgba="0.2 0.2 0.2 1.0"/></material>
  <material name="mat_light_grey"><color rgba="0.7 0.7 0.7 1.0"/></material>
  <material name="mat_rubber_black"><color rgba="0.05 0.05 0.05 1.0"/></material>
  <material name="mat_fabric_blue"><color rgba="0.1 0.25 0.8 1.0"/></material>
  <material name="mat_accent_red"><color rgba="0.9 0.1 0.1 1.0"/></material>
  <material name="mat_footprint"><color rgba="0.1 0.8 0.1 0.3"/></material>

  <!-- ============================================= -->
  <!-- BASE FOOTPRINT (Required for Navigation) -->
  <!-- ============================================= -->
  <link name="base_footprint">
    <!-- Visible transparent footprint to see robot base area -->
    <visual>
      <geometry>
        <cylinder radius="0.35" length="0.01"/>
      </geometry>
      <material name="mat_footprint"/>
    </visual>
  </link>

  <joint name="base_footprint_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0.11" rpy="0 0 0"/>
  </joint>

  <!-- ============================================= -->
  <!-- BASE LINK -->
  <!-- ============================================= -->
  <link name="base_link">
    <visual>
      <geometry><box size="0.6 0.5 0.18"/></geometry>
      <material name="mat_dark_grey"/>
    </visual>
    <collision>
      <geometry><box size="0.6 0.5 0.18"/></geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="25"/>
      <inertia ixx="0.677" ixy="0.0" ixz="0.0"
               iyy="0.927" iyz="0.0" izz="1.56"/>
    </inertial>
  </link>

  <!-- ============================================= -->
  <!-- SEAT -->
  <!-- ============================================= -->
  <link name="seat_link">
    <visual>
      <origin xyz="0 0 0.20"/>
      <geometry><box size="0.55 0.45 0.05"/></geometry>
      <material name="mat_fabric_blue"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.20"/>
      <geometry><box size="0.55 0.45 0.05"/></geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0.20"/>
      <mass value="5"/>
      <inertia ixx="0.042" ixy="0.0" ixz="0.0"
               iyy="0.063" iyz="0.0" izz="0.104"/>
    </inertial>
  </link>

  <joint name="seat_joint" type="fixed">
    <parent link="base_link"/>
    <child link="seat_link"/>
    <origin xyz="0 0 0"/>
  </joint>

  <!-- ============================================= -->
  <!-- BACKREST -->
  <!-- ============================================= -->
  <link name="backrest_link">
    <visual>
      <origin xyz="-0.20 0 0.35"/>
      <geometry><box size="0.05 0.45 0.35"/></geometry>
      <material name="mat_fabric_blue"/>
    </visual>
    <collision>
      <origin xyz="-0.20 0 0.35"/>
      <geometry><box size="0.05 0.45 0.35"/></geometry>
    </collision>
    <inertial>
      <origin xyz="-0.20 0 0.35"/>
      <mass value="3"/>
      <inertia ixx="0.031" ixy="0.0" ixz="0.0"
               iyy="0.031" iyz="0.0" izz="0.0028"/>
    </inertial>
  </link>

  <joint name="backrest_joint" type="fixed">
    <parent link="seat_link"/>
    <child link="backrest_link"/>
    <origin xyz="-0.10 0 0.15"/>
  </joint>

  <!-- ============================================= -->
  <!-- LEFT WHEEL -->
  <!-- ============================================= -->
  <link name="left_wheel">
    <visual>
      <origin rpy="1.5708 0 0"/>
      <geometry><cylinder radius="0.11" length="0.06"/></geometry>
      <material name="mat_rubber_black"/>
    </visual>
    <collision>
      <origin rpy="1.5708 0 0"/>
      <geometry><cylinder radius="0.11" length="0.06"/></geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="2"/>
      <inertia ixx="0.0122" ixy="0.0" ixz="0.0"
               iyy="0.0122" iyz="0.0" izz="0.0121"/>
    </inertial>
  </link>

  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0 0.27 0.0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="0.7" friction="0.1"/>
  </joint>

  <!-- ============================================= -->
  <!-- RIGHT WHEEL -->
  <!-- ============================================= -->
  <link name="right_wheel">
    <visual>
      <origin rpy="1.5708 0 0"/>
      <geometry><cylinder radius="0.11" length="0.06"/></geometry>
      <material name="mat_rubber_black"/>
    </visual>
    <collision>
      <origin rpy="1.5708 0 0"/>
      <geometry><cylinder radius="0.11" length="0.06"/></geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="2"/>
      <inertia ixx="0.0122" ixy="0.0" ixz="0.0"
               iyy="0.0122" iyz="0.0" izz="0.0121"/>
    </inertial>
  </link>

  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0 -0.27 0.0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="0.7" friction="0.1"/>
  </joint>

  <!-- ============================================= -->
  <!-- FRONT CASTERS -->
  <!-- ============================================= -->
  <link name="front_left_caster">
    <visual>
      <geometry><sphere radius="0.05"/></geometry>
      <material name="mat_rubber_black"/>
    </visual>
    <collision>
      <geometry><sphere radius="0.05"/></geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="0.3"/>
      <inertia ixx="0.0003" ixy="0.0" ixz="0.0"
               iyy="0.0003" iyz="0.0" izz="0.0003"/>
    </inertial>
  </link>

  <joint name="front_left_caster_joint" type="fixed">
    <parent link="base_link"/>
    <child link="front_left_caster"/>
    <origin xyz="0.25 0.20 -0.06"/>
  </joint>

  <link name="front_right_caster">
    <visual>
      <geometry><sphere radius="0.05"/></geometry>
      <material name="mat_rubber_black"/>
    </visual>
    <collision>
      <geometry><sphere radius="0.05"/></geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="0.3"/>
      <inertia ixx="0.0003" ixy="0.0" ixz="0.0"
               iyy="0.0003" iyz="0.0" izz="0.0003"/>
    </inertial>
  </link>

  <joint name="front_right_caster_joint" type="fixed">
    <parent link="base_link"/>
    <child link="front_right_caster"/>
    <origin xyz="0.25 -0.20 -0.06"/>
  </joint>

  <!-- ============================================= -->
  <!-- LIDAR -->
  <!-- ============================================= -->
  <link name="lidar_link">
    <visual>
      <origin rpy="0 0 0"/>
      <geometry><cylinder radius="0.045" length="0.06"/></geometry>
      <material name="mat_accent_red"/>
    </visual>
    <collision>
      <geometry><cylinder radius="0.045" length="0.06"/></geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="0.2"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0"
               iyy="0.0001" iyz="0.0" izz="0.00004"/>
    </inertial>
  </link>

  <joint name="lidar_joint" type="fixed">
    <parent link="base_link"/>
    <child link="lidar_link"/>
    <origin xyz="0.25 0 0.28"/>
  </joint>

  <!-- ============================================= -->
  <!-- CAMERA -->
  <!-- ============================================= -->
  <link name="camera_link">
    <visual>
      <geometry><box size="0.05 0.05 0.05"/></geometry>
      <material name="mat_light_grey"/>
    </visual>
    <collision>
      <geometry><box size="0.05 0.05 0.05"/></geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.00002" ixy="0.0" ixz="0.0"
               iyy="0.00002" iyz="0.0" izz="0.00002"/>
    </inertial>
  </link>

  <joint name="camera_joint" type="fixed">
    <parent link="base_link"/>
    <child link="camera_link"/>
    <origin xyz="0.32 0 0.25"/>
  </joint>

  <!-- Camera Optical Frame (ROS Convention) -->
  <link name="camera_optical_link"/>

  <joint name="camera_optical_joint" type="fixed">
    <parent link="camera_link"/>
    <child link="camera_optical_link"/>
    <origin xyz="0 0 0" rpy="-1.5708 0 -1.5708"/>
  </joint>

  <!-- ============================================= -->
  <!-- IMU -->
  <!-- ============================================= -->
  <link name="imu_link">
    <visual>
      <geometry><cylinder radius="0.03" length="0.02"/></geometry>
      <origin rpy="0 0 0"/>
      <material name="mat_light_grey"/>
    </visual>
    <collision>
      <geometry><cylinder radius="0.03" length="0.02"/></geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="0.05"/>
      <inertia ixx="0.000001" ixy="0.0" ixz="0.0"
               iyy="0.000001" iyz="0.0" izz="0.000001"/>
    </inertial>
  </link>

  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="0 0 0.22"/>
  </joint>

  <!-- ============================================= -->
  <!-- CLIFF SENSOR (Front) -->
  <!-- ============================================= -->
  <link name="cliff_sensor_front">
    <visual>
      <geometry><box size="0.02 0.05 0.01"/></geometry>
      <material name="mat_light_grey"/>
    </visual>
    <collision>
      <geometry><box size="0.02 0.05 0.01"/></geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="0.01"/>
      <inertia ixx="0.000001" ixy="0.0" ixz="0.0"
               iyy="0.000001" iyz="0.0" izz="0.000001"/>
    </inertial>
  </link>

  <joint name="cliff_sensor_front_joint" type="fixed">
    <parent link="base_link"/>
    <child link="cliff_sensor_front"/>
    <origin xyz="0.30 0 -0.10"/>
  </joint>

  <!-- ============================================= -->
  <!-- GAZEBO PROPERTIES -->
  <!-- ============================================= -->

  <!-- Materials -->
  <gazebo reference="base_link">
    <material>Gazebo/Grey</material>
    <mu1>0.5</mu1>
    <mu2>0.5</mu2>
    <kp>1000000.0</kp>
    <kd>100.0</kd>
    <minDepth>0.001</minDepth>
  </gazebo>

  <gazebo reference="seat_link">
    <material>Gazebo/Blue</material>
    <mu1>0.3</mu1>
    <mu2>0.3</mu2>
  </gazebo>

  <gazebo reference="backrest_link">
    <material>Gazebo/Blue</material>
    <mu1>0.3</mu1>
    <mu2>0.3</mu2>
  </gazebo>

  <gazebo reference="lidar_link">
    <material>Gazebo/Red</material>
  </gazebo>

  <gazebo reference="camera_link">
    <material>Gazebo/Black</material>
  </gazebo>

  <!-- Wheel Physics -->
  <gazebo reference="left_wheel">
    <material>Gazebo/Black</material>
    <mu1>0.85</mu1>
    <mu2>0.85</mu2>
    <kp>1000000.0</kp>
    <kd>100.0</kd>
    <minDepth>0.001</minDepth>
    <maxVel>1.0</maxVel>
  </gazebo>

  <gazebo reference="right_wheel">
    <material>Gazebo/Black</material>
    <mu1>0.85</mu1>
    <mu2>0.85</mu2>
    <kp>1000000.0</kp>
    <kd>100.0</kd>
    <minDepth>0.001</minDepth>
    <maxVel>1.0</maxVel>
  </gazebo>

  <!-- Caster Physics -->
  <gazebo reference="front_left_caster">
    <material>Gazebo/Grey</material>
    <mu1>0.1</mu1>
    <mu2>0.1</mu2>
    <kp>1000000.0</kp>
    <kd>100.0</kd>
  </gazebo>

  <gazebo reference="front_right_caster">
    <material>Gazebo/Grey</material>
    <mu1>0.1</mu1>
    <mu2>0.1</mu2>
    <kp>1000000.0</kp>
    <kd>100.0</kd>
  </gazebo>

  <!-- ============================================= -->
  <!-- TRANSMISSIONS (for ROS Control) -->
  <!-- ============================================= -->
  <transmission name="left_wheel_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="left_wheel_joint">
      <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
    </joint>
    <actuator name="left_wheel_motor">
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  <transmission name="right_wheel_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="right_wheel_joint">
      <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
    </joint>
    <actuator name="right_wheel_motor">
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  <!-- ============================================= -->
  <!-- DIFFERENTIAL DRIVE CONTROLLER -->
  <!-- ============================================= -->
  <gazebo>
    <plugin name="diff_drive_controller" filename="libgazebo_ros_diff_drive.so">
      <update_rate>50</update_rate>

      <!-- Wheel Configuration -->
      <left_joint>left_wheel_joint</left_joint>
      <right_joint>right_wheel_joint</right_joint>
      <wheel_separation>0.54</wheel_separation>
      <wheel_diameter>0.22</wheel_diameter>

      <!-- Limits -->
      <max_wheel_torque>20</max_wheel_torque>
      <max_wheel_acceleration>1.0</max_wheel_acceleration>

      <!-- Topics -->
      <command_topic>cmd_vel</command_topic>
      <odometry_topic>odom</odometry_topic>

      <!-- Frames -->
      <odometry_frame>odom</odometry_frame>
      <robot_base_frame>base_footprint</robot_base_frame>

      <!-- Publishing -->
      <publish_odom>true</publish_odom>
      <publish_odom_tf>true</publish_odom_tf>
      <publish_wheel_tf>true</publish_wheel_tf>
    </plugin>
  </gazebo>

  <!-- ============================================= -->
  <!-- LIDAR SENSOR -->
  <!-- ============================================= -->
  <gazebo reference="lidar_link">
    <sensor name="lidar" type="ray">
      <pose>0 0 0 0 0 0</pose>
      <visualize>true</visualize>
      <update_rate>15</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>720</samples>
            <resolution>1</resolution>
            <min_angle>-3.14159</min_angle>
            <max_angle>3.14159</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.12</min>
          <max>12.0</max>
          <resolution>0.01</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.01</stddev>
        </noise>
      </ray>
      <plugin name="gazebo_ros_laser" filename="libgazebo_ros_ray_sensor.so">
        <ros>
          <remapping>scan:=/scan</remapping>
        </ros>
        <frame_name>lidar_link</frame_name>
        <output_type>sensor_msgs/LaserScan</output_type>
      </plugin>
    </sensor>
  </gazebo>

  <!-- ============================================= -->
  <!-- CAMERA SENSOR -->
  <!-- ============================================= -->
  <gazebo reference="camera_link">
    <sensor name="camera" type="camera">
      <update_rate>15</update_rate>
      <visualize>true</visualize>
      <camera>
        <horizontal_fov>1.396</horizontal_fov>
        <image>
          <width>640</width>
          <height>480</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.05</near>
          <far>50.0</far>
        </clip>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.007</stddev>
        </noise>
      </camera>
      <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
        <ros>
          <remapping>~/image_raw:=camera/image_raw</remapping>
          <remapping>~/camera_info:=camera/camera_info</remapping>
        </ros>
        <camera_name>camera</camera_name>
        <frame_name>camera_optical_link</frame_name>
      </plugin>
    </sensor>
  </gazebo>

  <!-- ============================================= -->
  <!-- IMU SENSOR -->
  <!-- ============================================= -->
  <gazebo reference="imu_link">
    <sensor name="imu" type="imu">
      <always_on>true</always_on>
      <update_rate>100</update_rate>
      <visualize>true</visualize>
      <plugin name="imu_plugin" filename="libgazebo_ros_imu_sensor.so">
        <ros>
          <remapping>~/out:=imu/data</remapping>
        </ros>
        <initial_orientation_as_reference>false</initial_orientation_as_reference>
        <frame_name>imu_link</frame_name>
      </plugin>
    </sensor>
  </gazebo>

  <!-- ============================================= -->
  <!-- CLIFF SENSOR PLUGIN -->
  <!-- ============================================= -->
  <gazebo reference="cliff_sensor_front">
    <sensor name="cliff_sensor" type="ray">
      <pose>0 0 0 0 0 0</pose>
      <visualize>false</visualize>
      <update_rate>10</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>1</samples>
            <resolution>1</resolution>
            <min_angle>0</min_angle>
            <max_angle>0</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.0</min>
          <max>0.15</max>
          <resolution>0.01</resolution>
        </range>
      </ray>
      <plugin name="gazebo_ros_cliff_sensor" filename="libgazebo_ros_ray_sensor.so">
        <ros>
          <remapping>scan:=/cliff_sensor</remapping>
        </ros>
        <frame_name>cliff_sensor_front</frame_name>
        <output_type>sensor_msgs/LaserScan</output_type>
      </plugin>
    </sensor>
  </gazebo>

  <!-- ============================================= -->
  <!-- JOINT STATE PUBLISHER -->
  <!-- ============================================= -->
  <gazebo>
    <plugin name="gazebo_ros_joint_state_publisher" filename="libgazebo_ros_joint_state_publisher.so">
      <update_rate>50</update_rate>
      <joint_name>left_wheel_joint</joint_name>
      <joint_name>right_wheel_joint</joint_name>
    </plugin>
  </gazebo>

  <!-- ============================================= -->
  <!-- GROUND TRUTH POSE PUBLISHER -->
  <!-- ============================================= -->
  <gazebo>
    <plugin name="gazebo_ros_p3d" filename="libgazebo_ros_p3d.so">
      <ros>
        <remapping>data:=ground_truth_pose</remapping>
      </ros>
      <body_name>base_link</body_name>
      <frame_name>odom</frame_name>
      <update_rate>50</update_rate>
    </plugin>
  </gazebo>

</robot>
